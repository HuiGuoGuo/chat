<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>


  <context-param>
    <param-name>logbackConfigLocation</param-name>
    <param-value>classpath:config/logback-${spring.profiles.active}.xml</param-value> <!-- classpath是指 WEB-INF文件夹下的classes目录  -->
  </context-param>
  <listener>
    <listener-class>com.stone.chat.listener.LogbackConfigListener</listener-class>
  </listener>
</web-app>
